<main class="mt-5">
    <!--Main container-->
    <div class="container">
      <div class="row">
       <% @courses.each do |course| %>
        <!--Grid column-->
        <div class="col-lg-4 col-md-12 mb-4">
          <!--Card-->
          <div class="card">

            <!--Card image-->
            <div class="view overlay">
              <video id="my-video" class="video-js" controls preload="auto" width="640"
    height="264" download="true" poster="<%= url_for(course.thumbnail) %>" data-setup="{}">
    <source src="<%= url_for(course.clip) %>" type="video/mp4"/></video>
              <a href="#">
                <div class="mask rgba-white-slight"></div>
              </a>
            </div>

            <!--Card content-->
            <div class="card-body">
              <!--Title-->
              <h4 class="card-title"><%= course.name %></h4>
              <!--Text-->
              <p class="card-text"><%= course.description %></p>
              <a href="#!" class="btn btn-indigo">Button</a>
            </div>

          </div>
          <!--/.Card-->

        </div>
        <!--Grid column-->
         <% end %>
    </div>
    <!--Main container-->

  </main>
  <!--Main layout-->

  