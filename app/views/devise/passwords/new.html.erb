<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Forgot your password?</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="md-form mb-5">
          &nbsp;&nbsp;<i class="fas fa-envelope prefix grey-text"></i>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",id:"orangeForm-email", class:"form-control validate" %>
          <label data-error="wrong" data-success="right" for="orangeForm-email">Your email</label>
        </div>

        
      <div class="modal-footer d-flex justify-content-center">
        <%= f.submit "Send me reset password instructions",class:"btn btn-deep-orange" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
