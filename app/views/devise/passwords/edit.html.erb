<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Change your password</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="md-form mb-4">
          &nbsp;&nbsp;<i class="fas fa-lock prefix grey-text"></i>
         <%= f.password_field :password, autocomplete: "new-password",id:"orangeForm-pass", class:"form-control validate" %>
          <label data-error="wrong" data-success="right" for="orangeForm-pass">New password<% if @minimum_password_length %>
         <em>(<%= @minimum_password_length %> characters minimum)</em>
         <% end %><br /></label>
      </div>
       
      <div class="md-form mb-4">
        &nbsp;<i class="fas fa-lock prefix grey-text"></i>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",id:"orangeForm-pass", class:"form-control validate" %>
        <label data-error="wrong" data-success="right" for="orangeForm-pass">Confirm new password</label>
      </div>
        
      <div class="modal-footer d-flex justify-content-center">
        <%= f.submit "Change my password",class:"btn btn-deep-orange" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
